pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                script{
                    properties([pipelineTriggers([githubPush()])])
                }
                git branch: 'dev', url: 'https://github.com/061322-VA-JavaMSA/hashiras-back'
            }
        }

        stage('Clean') {
            steps {
                sh 'mvn clean'
            }
        }

        stage('Package') {
            steps {
                sh 'mvn package'
            }
        }

        stage ('Deploy') {
            steps {
                echo 'Deploying'
            }
        }
    }
}